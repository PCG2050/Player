<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Player.MainPage">

    <StackLayout>
        <ContentView x:Name="VideoContainer" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
        <Slider x:Name="DurationSlider" Minimum="0" Maximum="100" Value="0" HorizontalOptions="FillAndExpand" VerticalOptions="End" />
        <WebView x:Name="QuestionWebView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" IsVisible="False" />
    </StackLayout>
</ContentPage>
